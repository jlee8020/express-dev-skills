<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <h1>Developer Skills</h1>
    <ul>
        <% skills.forEach(function(s,idx){%>
            <li>
                <form action="/skills/<%= idx %>?_method=DELETE"
                    class="delete-form" method="POST">
                    <button type="submit">X</button>
                  </form>
                <a href="skills/<%= idx %>"><%= s.skill %></a>
                    - <%= s.learned ? 'Learned' : 'Not Learned' %></li>
        <% }) %>
    </ul>
    <a href="/skills/new">Add Skill</a>
</body>
</html>